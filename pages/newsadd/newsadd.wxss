page{
  height: 100%;
  width: 100%;
  background-color: #e0e0e0;
  overflow: hidden;
}
.bg{
  width: 100%;
  height: 100%;
}
.register{
  width: 94%;
  height: 350px;
  background-color: rgba(255,255,255,0.35);
  margin: 3%;
  border-radius: 6px;
}
.register textarea{
  display: inline-block;
  margin-top: 10px;
  width: 90%;
  height: 250px;
  margin-left: 3.5%;
  background-color: rgba(255,255,255,0.6);
  box-shadow: inset 0px 1px 4px #ECECEC;
  color: #777777;
  padding: 3px 3px 3px 12px;
  border-radius: 4px;
}
._btn{
  width: 140px;
  text-align: center;
  height: 45px;
  line-height: 45px;
  background-color: rgba(191, 191, 191, 0.8);
  font-family: Helvetica, Arial, sans-serif;
  font-size: 20px;
  color: #fff;
  margin-top: 15px;
  margin-left: calc(50% - 70px);
  border-radius: 6px;
}